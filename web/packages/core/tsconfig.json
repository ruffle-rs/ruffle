{
    "extends": "@tsconfig/strictest/tsconfig.json",
    "compilerOptions": {
        "composite": true,
        "module": "es2020",
        "moduleResolution": "node",
        "target": "es2021",
        "rootDir": "src",
        "outDir": "dist",
        "jsx": "react-jsx",
        "jsxImportSource": "tsx-dom",
        "types": ["node", "tsx-dom"]
    },
    "include": ["src/**/*"],
}
